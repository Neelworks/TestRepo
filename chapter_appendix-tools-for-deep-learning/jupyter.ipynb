import matplotlib.pyplot as plt
import pandas as pd
import numpy as np

# ---------------------------------------------------------
# 1. DATA INPUT (Based on Sources 218 & 225 from your report)
# ---------------------------------------------------------
# H = Poverty Rate (Incidence)
# APG = Extreme Poverty Rate (Proxy for Depth)
# G = Gini Coefficient (Inequality)

data = {
    'Year': [2018, 2019, 2021, 2022, 2023, 2024],
    # Rural Data
    'Rural_H':   [39.7, 40.5, 41.7, 40.0, 38.5, 38.6],
    'Rural_APG': [17.2, 17.7, 17.7, 17.5, 18.5, 17.4],
    'Rural_G':   [0.452, 0.443, 0.444, 0.440, 0.450, 0.444],
    # Urban Data
    'Urban_H':   [14.1, 15.3, 22.8, 18.6, 17.0, 17.5],
    'Urban_APG': [3.5,  4.2,  6.8,  5.1,  4.2,  4.8],
    'Urban_G':   [0.452, 0.450, 0.481, 0.455, 0.444, 0.447]
}

df = pd.DataFrame(data)

# ---------------------------------------------------------
# 2. CALCULATE SST INDEX (Strict Proxy Method)
# ---------------------------------------------------------
# Formula: SST = (H/100) * (APG/100) * (1 + G)

# Rural SST Calculation
df['Rural_SST'] = (df['Rural_H'] / 100) * (df['Rural_APG'] / 100) * (1 + df['Rural_G'])

# Urban SST Calculation
df['Urban_SST'] = (df['Urban_H'] / 100) * (df['Urban_APG'] / 100) * (1 + df['Urban_G'])

# ---------------------------------------------------------
# 3. GENERATE COMPARISON PLOTS
# ---------------------------------------------------------
fig, axes = plt.subplots(nrows=1, ncols=3, figsize=(18, 6))

# Define colors
color_rural = '#B71C1C' # Dark Red
color_urban = '#4CAF50' # Green

# Plot 1: Headcount (The "Official" Rate)
axes[0].plot(df['Year'], df['Rural_H'], marker='o', color=color_rural, linewidth=2, label='Rural')
axes[0].plot(df['Year'], df['Urban_H'], marker='o', color=color_urban, linewidth=2, label='Urban')
axes[0].set_title('1. Headcount Ratio (H)\n(Standard Poverty Rate)', fontsize=12, fontweight='bold')
axes[0].set_ylabel('Percentage (%)')
axes[0].grid(True, linestyle='--', alpha=0.7)
axes[0].legend()

# Plot 2: Gini Coefficient (Inequality)
axes[1].plot(df['Year'], df['Rural_G'], marker='s', color=color_rural, linewidth=2, label='Rural')
axes[1].plot(df['Year'], df['Urban_G'], marker='s', color=color_urban, linewidth=2, label='Urban')
axes[1].set_title('2. Gini Coefficient (G)\n(Inequality Proxy)', fontsize=12, fontweight='bold')
axes[1].set_ylabel('Coefficient (0-1)')
axes[1].set_ylim(0.40, 0.50) # Zoom in to show the nuance
axes[1].grid(True, linestyle='--', alpha=0.7)

# Plot 3: SST Index (The Combined Intensity)
axes[2].plot(df['Year'], df['Rural_SST'], marker='D', color=color_rural, linewidth=3, label='Rural')
axes[2].plot(df['Year'], df['Urban_SST'], marker='D', color=color_urban, linewidth=3, label='Urban')
axes[2].set_title('3. SST Index\n(Total Poverty Intensity)', fontsize=12, fontweight='bold')
axes[2].set_ylabel('Index Value (0-1)')
axes[2].set_ylim(0, 0.16) # Set limit to visualize the gap clearly
axes[2].grid(True, linestyle='--', alpha=0.7)

# Highlight the Gap in 2024 on the SST chart
sst_rural_24 = df['Rural_SST'].iloc[-1]
sst_urban_24 = df['Urban_SST'].iloc[-1]
axes[2].annotate(f'{sst_rural_24:.3f}', xy=(2024, sst_rural_24), xytext=(2024, sst_rural_24+0.01), ha='center', color=color_rural, fontweight='bold')
axes[2].annotate(f'{sst_urban_24:.3f}', xy=(2024, sst_urban_24), xytext=(2024, sst_urban_24+0.01), ha='center', color=color_urban, fontweight='bold')

plt.tight_layout()
plt.show()

# Print the calculated table for verification
print("Calculated SST Values (Proxy Method):")
print(df[['Year', 'Rural_SST', 'Urban_SST']])
